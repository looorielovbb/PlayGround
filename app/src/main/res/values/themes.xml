<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlayGround" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorOnPrimary">@color/indigo_100</item>
        <item name="colorPrimaryContainer">@color/indigo_50</item>
        <item name="colorOnPrimaryContainer">@color/indigo_300</item>
        <item name="colorPrimaryInverse">@color/teal_200</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/blue_gray_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_a200</item>
        <item name="colorOnSecondary">@color/blue_gray_100</item>
        <item name="colorSecondaryContainer">@color/blue_gray_50</item>
        <item name="colorOnSecondaryContainer">@color/indigo_a400</item>

        <item name="colorError">@color/red_500</item>
        <item name="colorErrorContainer">@color/red_100</item>
        <item name="colorOnErrorContainer">@color/red_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>